    <script src="../../Content/vendor/php-email-form/validate.js"></script>
    <script src="../../Content/vendor/aos/aos.js"></script>
    <script src="../../Content/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="../../Content/vendor/swiper/swiper-bundle.min.js"></script>
    <!-- Main JS File -->
    <script src="~/Content/js/main.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Home/GetCategories',
                type: 'GET',
                success: function (data) {
                    $('#categoriesdropdown').html(data);
                },
                error: function (xhr, status, error) {
                    console.error("Error loading categories:", status, error);
                    $('#categoriesdropdown').html('<li><a href="#" class="dropdown-item">Error loading categories</a></li>');
                }
            });
        });

    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const accountDropdown = document.getElementById('accountDropdown');
            const dropdownMenu = document.getElementById('dropdownMenu');

            accountDropdown.addEventListener('click', function (event) {
                event.preventDefault();
                dropdownMenu.classList.toggle('show');
            });

            // Đóng dropdown nếu nhấp ra ngoài
            window.addEventListener('click', function (event) {
                if (!accountDropdown.contains(event.target) && !dropdownMenu.contains(event.target)) {
                    dropdownMenu.classList.remove('show');
                }
            });
        });
    </script>
</body>
</html>
