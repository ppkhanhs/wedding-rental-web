                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" id="productsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span>Các sản phẩm</span></i>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                                @Html.Action("LoadCategoriesPartial", "Home")
                            </ul>
                        </li>
                        <li class="nav-item"><a href="/Home/Contact" class="nav-link" id="contact-link">Liên hệ</a></li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>
                <a class="btn btn-outline-secondary ms-4" href="/Cart/CartView"><i class="fas fa-shopping-cart"></i></a>
                <a class="btn-getstarted dropdown-toggle" href="#" id="accountDropdown" role="button" aria-haspopup="true" aria-expanded="false">
