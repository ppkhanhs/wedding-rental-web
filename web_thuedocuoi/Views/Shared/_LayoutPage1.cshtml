                    <!-- Cho check thêm nếu role là admin thì sẽ hiển thị trang này -->
                    <a class="dropdown-item text-primary font-weight-bold" href="/Admin/ManageProducts"> <i class="far fa-user-cog me-2"></i> Trang quản trị viên</a>
                    <!-- -->

            </div>
        </header>

        @RenderBody()

    </div>

    <footer id="footer" class="footer position-relative light-background">

        <div class="container footer-top">
            <div class="row gy-4">
                <div class="col-lg-5 col-md-6 footer-about">
                    <a href="index.html" class="logo d-flex align-items-center mb-0">
                        <img src="../../Content/img/logo.png" alt="">
                        <h1 class="sitename">ThueDoCuoi</h1>
                    </a>
                    <div class="footer-contact pt-3">
                        <p><i class="fas fa-map"></i> <strong class="ms-1">Địa chỉ:</strong> <span>140 Lê Trọng Tấn, Tây Thạnh, Tân Phú, TP.HCM</span></p>
                        <p><i class="fas fa-phone"></i> <strong class="ms-1">Hotline:</strong> <span>0327.749.747</span></p>
                        <p><i class="fas fa-envelope"></i> <strong class="ms-1">Email:</strong> <span>contact@thuedocuoi.com</span></p>
                    </div>
                    <div class="social-links d-flex mt-4">
