
@{
    ViewBag.Title = "ProductsDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="main" class="page-container">
    <div class="d-flex d-sm-flex align-items-center mb-4">
        <button class="btn btn-primary" onclick="toggleNav()"><i class="fas fa-bars"></i></button>
        <h1 class="h4 mb-0 text-gray-800 ms-3"><a class="text-link" href="/Home/Index">Home</a> / Chỉnh sửa sản phẩm</h1>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <p>
                <i class="fas fa-exclamation-triangle text-danger me-2"></i><span class="font-weight-bold">Lưu ý:</span> Các file ảnh có kích thước dưới 100 MB và thuộc các định dạng PNG / JPG / JPEG
            </p>
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 style="color: #333;" class="m-0"><i class="far fa-edit me-2"></i>Chỉnh sửa thông tin sản phẩm</h6>
                </div>
                <div class="card-body">
                    <form id="edit_product" method="POST" action="/Admin/EditProducts/@(Model?.MASP ?? "")" enctype="multipart/form-data">
                        <div class="row">
                            <div class="form-group col-md-4 mb-3">
                                <label for="tensp" class="font-weight-bold"><i class="fa fa-tags me-2"></i>Tên sản phẩm</label>
                                <input type="text" class="form-control mt-2" name="tensp" id="tensp" placeholder="Nhập tên của sản phẩm" value="@(Model?.TENSP ?? "")">
                            </div>
                            <div class="form-group col-md-4 mb-3">
                                <label for="ma_danhmuc" class="font-weight-bold"><i class="fa fa-list-ul me-2"></i>Danh mục sản phẩm</label>
                                <select name="ma_danhmuc" id="ma_danhmuc" class="form-control mt-2">
                                    <option value="VAYCUOI" @(Model?.MA_DANHMUC == "DM001" ? "selected" : "")>Váy Cưới</option>
                                    <option value="VESTCUOI" @(Model?.MA_DANHMUC == "DM004" ? "selected" : "")>Vest Cưới</option>
                                    <option value="AODAI" @(Model?.MA_DANHMUC == "DM003" ? "selected" : "")>Áo Dài</option>
                                    <option value="PHUKIENCUOI" @(Model?.MA_DANHMUC == "DM006" ? "selected" : "")>Phụ Kiện Cưới</option>
                                </select>
                                <option value="PHUKIENCUOI" @(Model?.MA_DANHMUC == "DM005" ? "selected" : "")>Giày Cưới</option>
                            </div>
                            <div class="form-group col-md-4 mb-3">
                                <label for="gia" class="font-weight-bold"><i class="fas fa-money-bill me-2"></i>Đơn giá (₫)</label>
                                <input type="number" class="form-control mt-2" name="gia" id="gia" placeholder="Nhập đơn giá cho sản phẩm" value="@(Model?.GIA??"")">
                            </div>
                            <div class="form-group col-md-4 mb-3">
                                <label for="soluongton" class="font-weight-bold"><i class="fa fa-cubes me-2"></i>Số lượng tồn</label>
                                <input type="number" class="form-control mt-2" name="soluongton" id="soluongton" placeholder="Số lượng tồn trong kho" value="@(Model?.SOLUONGTON??"")">
                            </div>
                            <div class="form-group col-md-4 mb-3">
                                <label for="hinhanh" class="font-weight-bold"><i class="far fa-file-image me-2"></i>Hình ảnh sản phẩm</label>
                                <input type="file" class="form-control mt-2" name="hinhanh" id="hinhanh">
                            </div>
                            <div class="form-group col-md-4 mb-3">
                                <img class="ml-3" src="~/Content/admin/images/@(Model?.HINHANH??"")" width="100" height="100" alt="Image">
                            </div>
                            <div class="form-group col-md-12 mb-5">
                                <label for="mota" class="font-weight-bold mb-3"><i class="fas fa-edit me-2"></i>Mô tả của sản phẩm</label>
                                <div id="edit_des">
                                    @(Model?.MOTA??"")
                                </div>
                            </div>
                            <div class="mt-5 button-area col-md-12 d-flex justify-content-end">
                                <a class="btn btn-danger m-1" href="/Admin/DeleteProducts/@(Model?.MASP??"")"><i class="fas fa-times me-2"></i>Xóa sản phẩm</a>
                                <button class="btn btn-primary m-1" type="submit"><i class="fas fa-check me-2"></i>Cập nhật</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="~/Content/js/main.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    var toolbarOptions = [['bold', 'italic', 'underline'], ['link', 'image', 'video'], [{ 'list': 'ordered' }, { 'list': 'bullet' }], [{ 'color': [] }]];
    var quill_edit = new Quill("#edit_des", {
        modules: {
            toolbar: toolbarOptions
        },
        theme: "snow"
    });
});
</script>

