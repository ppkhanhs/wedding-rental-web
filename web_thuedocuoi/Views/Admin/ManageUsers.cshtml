@{
    ViewBag.Title = "Admin Page - Quản lý tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="main" class="page-container">
    <div class="d-flex d-sm-flex align-items-center mb-4">
        <button class="btn btn-primary" onclick="toggleNav()"><i class="fas fa-bars"></i></button>
        <h1 class="h4 mb-0 text-gray-800 ms-3"><a class="text-link" href="/Admin/Index">Home</a> / Quản lý tài khoản</h1>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="font-weight-bold text-secondary text-uppercase mb-2">
                                Tài khoản khách hàng
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-normal">@ViewBag.UserCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="font-weight-bold text-secondary text-uppercase mb-2">
                                Tài khoản admin
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-normal">@ViewBag.AdminCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0"><i class="fas fa-list me-2"></i>Danh sách các tài khoản</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="table-responsive col-md-12">
                            <input type="text" class="form-control searchInput col-md-3" placeholder="Search...">
                            <table id="dataTable-10" class="table text-center border dataTable">
                                <thead class="table-head">
                                <th>ID</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Chức vụ</th>
                                <th>Ngày đăng ký</th>
                                <th>Hành động</th>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MAKH</td>
                                            <td>@item.EMAIL</td>
                                            <td>@item.DIEN_THOAI</td>
                                            <td>@item.HOTEN</td>
                                            <td>@item.NGAYTAO</td>
                                            <td>
                                                <a class="btn btn-primary text-sm font-weight-bold" href="/Admin/UsersDetail/@item.MAKH"><i class="fas fa-edit"></i></a>
                                                <a class="btn btn-danger text-sm" href="#"><i class="fas fa-trash-alt"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/js/main.js"></script>